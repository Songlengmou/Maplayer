<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="36dp"
        android:textSize="48dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="DuoMap.com"
        android:textColor="#14c1a7"/>

    <LinearLayout
        android:id="@+id/llUserIdArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="用户名："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/bg_edittext_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPwdArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvPwd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="密　码："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtPWD"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:password="true"
            android:background="@drawable/bg_edittext_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPwdComfirmArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="确认密码："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtPWDComfirm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:password="true"
            android:background="@drawable/bg_edittext_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoginBtnArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="登录" />

        <Button
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="去注册"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSignupBtnArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSignComfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="确认注册" />

        <Button
            android:id="@+id/btnCancelSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="取消"  />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:id="@+id/tvShowTest"
        android:gravity="center_horizontal"/>
</LinearLayout>
